addDefaultCharset utf-8

RewriteEngine On
RewriteBase /

DirectoryIndex /frontend/index.php

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

RewriteRule ^(.*)$ /frontend/index.php

ErrorDocument 404 ./backend/views/404.php

<Files .htaccess>
Order Allow,Deny
Deny from all
</Files>